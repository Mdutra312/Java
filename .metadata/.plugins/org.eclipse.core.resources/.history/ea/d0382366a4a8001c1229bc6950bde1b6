package metodo;

public class Produto {
	String nome;
	int codigo;
	double precoCusto;
	double precoVenda; 
	int quantidade;
	double margemLuc;
	public int registrarSaida1;
	public int registrarEntrada;
	
	
	public int registrarSaida1(int quantidadeSaida){
		
		this.registrarSaida1 = quantidade-quantidadeSaida;
		return this.registrarSaida1;
		
	}
	public int registrarEntrada1(int quantidade, int estoque){
		
		this.quantidade=quantidade+estoque;
		return this.registrarEntrada;
	}
	public void calcularPrecovenda(){
		this.precoVenda=precoCusto+(margemLuc*precoCusto)/100;
	}
	public double definirPrecoVenda(double verifica, double verifica2 ) {
		if(precoVenda<precoCusto) {
			System.out.println("O valor de venda é menor do que o valor de compra!");
		return verifica2;
		}
		return verifica;
		}
	public void exibirDados(){
		System.out.println("nome:"+this.nome);
		System.out.println("preco custo:"+this.precoCusto);
		System.out.println("saida:"+this.registrarSaida1);
		System.out.println("preço de venda:"+this.precoVenda);
		System.out.println("quantidade saida:"+this.registrarSaida1);
		System.out.println("codigo:"+this.codigo);

		
	}
		
	}
	
